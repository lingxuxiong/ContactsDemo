<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/contact_list_avatar_width"
        android:layout_height="@dimen/contact_list_avatar_height"
        android:layout_margin="@dimen/contact_list_avatar_margin"
        android:layout_marginStart="@dimen/contact_list_avatar_margin"
        android:layout_marginEnd="@dimen/contact_list_avatar_margin"
        android:src="@drawable/avatar_placeholder"
        app:civ_border_width="@dimen/contact_avatar_border_width"
        app:civ_border_color="@color/colorGrey"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:gravity="left|center_vertical"
        android:layout_toRightOf="@+id/avatar"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_alignBottom="@+id/avatar"
        />

    <TextView
        android:id="@+id/creation_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/contact_list_avatar_margin"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@id/name"
        android:layout_alignTop="@+id/avatar"
        android:layout_alignBottom="@+id/avatar"
        />


</RelativeLayout>